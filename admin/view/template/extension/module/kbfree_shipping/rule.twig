{{ header }}{{ column_left }} 
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <a href="{{ add_new }}" data-toggle="tooltip" title="{{ button_add_new }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %} 
                    <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
                {% endfor %} 
            </ul>
            {% if (success is defined) %} 
                <div class="alert alert-success">
                    <i class="fa fa-check-circle"></i> {{ success }} 
                </div>
            {% endif %} 
            <div class="panel panel-default">
                <div class="panel-heading">
                     {{ storeSwticher }} 
                    <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ tab_free_shipping_rule }}</h3>
                </div>
                <div class="panel-body">
                    {{ tab_common }} 
                    <div class="tab-content"> 
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <td class="text-left">{{ id }}</td>
                                    <td class="text-left">{{ name }}</td>
                                    <td class="text-left">{{ min_amount }} {{ " (" ~ default_currency_value ~ ")" }}</td>
                                    <td class="text-left">{{ min_weight }} {{ " (" ~ default_weight_value ~ ")" }}</td>
                                    <td class="text-left">{{ priority }}</td>
                                    <td class="text-left">{{ active }}</td>
                                    <td class="text-left">{{ last_update }}</td>
                                    <td class="text-right">{{ action_on_rules }}</td>
                                </tr>
                            </thead>
                            <tbody>
                                {% if (shipping_rules is not empty) %} 
                                    {% for block_rule in shipping_rules %} 
                                        <tr>
                                            <td class="text-left">{{ block_rule['id'] }}</td>
                                            <td class="text-left">{{ block_rule['name'] }}</td>
                                            <td class="text-left">{{ block_rule['min_amount'] }}</td>
                                            <td class="text-left">{{ block_rule['min_weight'] }}</td>
                                            <td class="text-left">{{ block_rule['priority'] }}</td>
                                            <td class="text-left">
                                             {% if (block_rule['active'] == 1) %}
 {{ text_enabled }}
 {% else %} 
 {{ text_disabled }}
 {% endif %}
 
                                            </td>
                                            <td class="text-left">{{ block_rule['date_modified'] }}</td>
                                            <td class="text-right">
                                                <a href="{{ block_rule['edit'] }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                                                <a href="{{ block_rule['delete'] }}" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-warning" onclick="return window.confirm('Do you want to delete IP?')"><i class="fa fa-trash-o"></i></a>
                                            </td>
                                        </tr>
                                        {% endfor %} 
                                        {% else %}       
                                    <tr>
                                        <td colspan="8" class="text-center">{{ no_result_message }}</td>
                                    </tr>
                                    {% endif %} 
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                               <div class="col-sm-6 text-left">{{ pagination }}</div>
                               <div class="col-sm-6 text-right">{{ results }}</div>
                         </div>
                </div>       
            </div>
        </div>
    </div>
</div>
          
{{ footer }} 
